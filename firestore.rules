
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for user profiles
    match /users/{userId} {
      // Any authenticated user can read any user profile (get) or the entire collection (list).
      allow read: if request.auth != null;
      // A user can only create, update, or delete their own profile data.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for private chat messages
    match /chats/{chatId}/messages/{messageId} {
        // Only the two users involved in the chat can read or write messages.
        allow read, write: if request.auth != null && request.auth.uid in chatId.split('_');
    }
    
    // Rules for user status updates
    match /users/{userId}/status_updates/{statusId} {
      // Any authenticated user can read status updates.
      allow get, list: if request.auth != null;
      // A user can only create, update, or delete their own status updates.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for affiliate products
    match /affiliate_products/{productId} {
      // Any authenticated user can read the product list.
      allow list, get: if request.auth != null;
      // Only users marked as admin can write (add, update, delete) products.
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // Rules for chat groups
    match /chat_groups/{groupId} {
      // A user can read a group's details if they are a member of that group.
      allow get: if request.auth != null && request.auth.uid in resource.data.memberIds;
      // A user can update a group only if they are the creator.
      allow update: if request.auth != null && resource.data.creatorId == request.auth.uid;
       // Any authenticated user can create a new group.
      allow create: if request.auth != null;
    }

    // Rules for messages within a chat group
    match /chat_groups/{groupId}/messages/{messageId} {
        // A user can read/write messages in a group if they are a member.
        // This is checked by getting the group document and verifying membership.
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/chat_groups/$(groupId)).data.memberIds.hasAny([request.auth.uid]);
    }

    // Rules for admin roles
    match /roles_admin/{userId} {
      // Allow any authenticated user to check if another user is an admin.
      // This is needed for the useAdmin hook to function correctly.
      allow get: if request.auth != null;
      // Only an admin can make another user an admin.
      // For this app, we allow a user to make themselves an admin for simplicity.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
