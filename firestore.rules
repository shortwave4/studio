
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to user profiles for discovery and chat lists.
    // Writes are restricted to the user who owns the document.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read/write messages in any chat.
    // This is a simplified rule for development.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Fallback for any other collections - deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
