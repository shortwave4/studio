
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to list all user profiles for discovery.
    match /users {
      allow list: if request.auth != null;
    }

    // Allow a user to read their own profile and for any authenticated user to read any profile
    // Writes are restricted to the user who owns the document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read and write messages in any chat.
    // This rule allows listing and creating messages in a chat collection.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Fallback for any other collections - deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
