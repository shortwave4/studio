
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to user profiles for discovery and chat lists.
    // Writes are restricted to the user who owns the document.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow chat participants to read the list of messages and write individual messages.
    // The `list` operation is on the collection, `get`/`create` are on the documents.
    match /chats/{chatId}/messages/{messageId} {
      allow get, create, update, delete: if request.auth != null && chatId.split('_').includes(request.auth.uid);
    }
    match /chats/{chatId}/messages {
      allow list: if request.auth != null && chatId.split('_').includes(request.auth.uid);
    }
    
    // Fallback for any other collections - deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
