
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to get any user document and list all users.
    // Only allow a user to create, update, or delete their own document.
    match /users/{userId} {
      allow get: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Explicitly allow listing the users collection for any authenticated user.
    match /users {
        allow list: if request.auth != null;
    }

    // Allow any authenticated user to read and write messages in any chat.
    // This rule allows listing and creating messages in a chat collection.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Fallback for any other collections - deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
