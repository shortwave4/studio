
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to read from the users collection (get and list)
    // but only allow a user to write to their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read and write messages in any chat.
    // This rule allows listing and creating messages in a chat collection.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Fallback for any other collections - deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
