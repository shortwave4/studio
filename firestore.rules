
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to get any user document.
    // Only allow a user to create, update, or delete their own document.
    match /users/{userId} {
      allow get: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow listing the users collection for any authenticated user.
    match /users {
        allow list: if request.auth != null;
    }
    
    // Allow any authenticated user to read and write messages in any chat.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    // Allow any authenticated user to read status updates
    match /users/{userId}/status_updates/{statusId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read affiliate products
    match /affiliate_products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Allow any authenticated user to check if they are an admin
    match /roles_admin/{userId} {
      allow get: if request.auth != null;
    }
    
    // Fallback for any other collections - deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
