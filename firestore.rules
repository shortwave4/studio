
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to user profiles for discovery and chat lists.
    // Writes are restricted to the user who owns the document.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow chat messages to be read and written by participants.
    // This is a simplified rule for one-on-one chats.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null && chatId.split('_').includes(request.auth.uid);
    }
    
    // Fallback for any other collections - deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
