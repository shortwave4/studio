
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to list the entire users collection.
    // This is required for discover and chat features.
    match /users {
      allow list: if request.auth != null;
    }

    // Rules for a single user document and its subcollections
    match /users/{userId} {
      // Allow an authenticated user to get any single user's profile.
      allow get: if request.auth != null;
      // Allow a user to write only to their own profile.
      allow write: if request.auth.uid == userId;

      // Rules for status_updates sub-collection
      // Allow any authenticated user to read (get, list) status updates.
      // Allow a user to only write to their own status updates.
      match /status_updates/{statusId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }
    }

    // Rules for private chats
    match /chats/{chatId} {
      // A user can get info about the chat if they are a member.
      allow get: if request.auth != null && request.auth.uid in chatId.split('_');

      // Rules for individual messages within a private chat
      // Only the two users involved in the chat can read (get, list) or write messages.
      match /messages/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid in chatId.split('_');
      }
    }
    
    // Rules for affiliate products
    match /affiliate_products/{productId} {
      // Any authenticated user can read the product list.
      allow list, get: if request.auth != null;
      // Only users marked as admin can write (add, update, delete) products.
      allow write: if request.auth != null && request.auth.token.email == 'fahadkhanamrohivi@gmail.com';
    }
    
    // Rules for chat groups
    match /chat_groups/{groupId} {
      // A user can read a group's details if they are a member of that group.
      allow get: if request.auth != null && request.auth.uid in resource.data.memberIds;
      // A user can update a group only if they are the creator.
      allow update: if request.auth != null && resource.data.creatorId == request.auth.uid;
       // Any authenticated user can create a new group.
      allow create: if request.auth != null;

      // Rules for messages within a chat group
      match /messages/{messageId} {
          // A user can read/write messages in a group if they are a member.
          // This is checked by getting the group document and verifying membership.
          allow read, write: if request.auth != null && get(/databases/$(database)/documents/chat_groups/$(groupId)).data.memberIds.hasAny([request.auth.uid]);
      }
    }
  }
}
