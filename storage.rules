
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to profile images
    match /profile-images/{userId}/{fileName} {
      allow read: if true;
      // Allow write only if the user is authenticated and the userId in the path matches their own UID
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to chat media
    match /chat_media/{chatId}/{fileName} {
        allow read: if true;
        // Allow write only for authenticated users. 
        // More specific rules could be added to check if the user is part of the chat.
        allow write: if request.auth != null;
    }
  }
}
